<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FudooPanda.Views.HomePage"
            Title="Home">
    <TabbedPage.ToolbarItems>
        <ToolbarItem Name="searchBox" Order="Primary" Icon="search.png" Text="Search" Priority="0" />
        <ToolbarItem Name="cart" Order="Primary" Icon="cart.png" Text="Cart" Priority="1" />
    </TabbedPage.ToolbarItems>
  <!--Pages can be added as references or inline-->
    <ContentPage Title="Recommended">
        <StackLayout>
            <!-- Place new controls here -->
            <Label Text="Recommended!" 
               VerticalOptions="Center" 
               HorizontalOptions="Center" />
        </StackLayout>
    </ContentPage>
    <ContentPage Title="Favourites">
        <StackLayout>
            <!-- Place new controls here -->
            <Label Text="Favourites!" 
               VerticalOptions="Center" 
               HorizontalOptions="Center" />
        </StackLayout>
    </ContentPage>
    <ContentPage Title="All" >
        <StackLayout>
            <!-- Place new controls here -->
            <Label Text="All!" 
               VerticalOptions="Center" 
               HorizontalOptions="Center" />
        </StackLayout>
    </ContentPage>
</TabbedPage>